{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "node_modules",
                "src/@types"
            ]
        }
    }
}